{
  "extends": "./tsconfig.path.json",
  "compilerOptions": {
    "types": ["@types/jest"],
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": ["../node_modules/@types", "./@types"],
    "isolatedModules": true,
    "disableSourceOfProjectReferenceRedirect": true
  }
}
